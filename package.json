    "serve-favicon": "^2.4.3",
    "supertest": "^3.0.0",
    "toastr": "^2.1.2"
  },
  "devDependencies": {
    "colors": "^1.1.2",
    "eslint": "^4.6.1",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-plugin-import": "^2.7.0",
    "http-server": "^0.10.0",
    "mocha": "^3.5.0",
    "mocha-lcov-reporter": "^1.3.0",
    "node-mocks-http": "^1.6.4",
    "nodemon": "^1.11.0",
    "should": "^12.0.0",
    "source-map-support": "^0.4.17",
    "tap": "^10.7.2"
  },
  "scripts": {
    "babel": "babel --presets es2015 app.js -o public/bundle.js",
    "webpack": "webpack --d --watch",
    "serve": "babel app.js --out-file dist/compiled.js && node dist/compiled.js ",
    "heroku-postbuild": "npm run clean-start",
    "start" : "babel-watch app.js",
    "heroku-start": "npm run build && node dist/app.js",
    "develop": "npm run build && node dist/app.js",
    "build": "babel ./ --out-dir dist --ignore .nyc_output,bin,build,coverage,lib,node_modules,dist,lib,public,src,tests,client.js,webpack.config.js",
    "old-test": "",
    "clean": "sequelize db:migrate:undo:all --env test && sequelize db:migrate --env test && sequelize db:seed:all --env test",
    "clean-start": "sequelize db:migrate:undo:all && sequelize db:migrate && sequelize db:seed:all",
    "test": "npm run clean && tap mocha tests/*.js",
    "test:demo": "tap tests/basic.js --cov",
    "controllers-test": "mocha --compilers js:babel-core/register tests/controllers.js",
    "middlewares-test": "mocha --compilers js:babel-core/register tests/middlewares.js",
    "coveralls": "npm test && nyc report --reporter=text-lcov | coveralls",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "lint": "eslint ./"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "reporter": [
      "lcov",
      "text",
      "html",
      "text-summary"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Adekunle24/more-recipes.git"
  },
  "author": "adekunle",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Adekunle24/more-recipes/issues"
  },
  "homepage": "https://github.com/Adekunle24/more-recipes#readme"
}
