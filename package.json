{
  "name": "more-recipes",
  "version": "1.0.0",
  "description": "More-Recipes​ provides​ ​a​ ​platform​ ​for​ ​users​ ​to​ ​share​ ​the​ ​awesome​ ​and​ ​exciting​ ​​ ​recipe​ ​ideas​ ​they",
  "main": "app.js",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-istanbul": "^0.12.2",
    "babel-plugin-inline-json-import": "^0.2.1",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "babel-watch": "^2.0.7",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.17.2",
    "chai": "^4.1.1",
    "chai-http": "^3.0.0",
    "coveralls": "^2.13.1",
    "dotenv": "^4.0.0",
    "eslint-plugin-react": "^7.3.0",
    "express": "^4.15.4",
    "express3-handlebars": "^0.5.2",
    "heroku-cli": "^6.14.20",
    "istanbul": "^0.4.5",
    "istanbul-lib-coverage": "^1.1.1",
    "jsonwebtoken": "^7.4.3",
    "morgan": "^1.8.2",
    "node-gyp": "^3.6.2",
    "node-pre-gyp": "^0.6.36",
    "pg": "^7.2.0",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.7.1",
