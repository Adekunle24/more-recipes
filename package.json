{
  "name": "more-recipes",
  "version": "1.0.0",
  "description": "More-Recipes​ provides​ ​a​ ​platform​ ​for​ ​users​ ​to​ ​share​ ​the​ ​awesome​ ​and​ ​exciting​ ​​ ​recipe​ ​ideas​ ​they",
  "main": "app.js",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-plugin-inline-json-import": "^0.2.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "babel-watch": "^2.0.7",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.17.2",
    "chai": "^4.1.1",
    "chai-http": "^3.0.0",
    "dotenv": "^4.0.0",
    "express": "^4.15.4",
    "express3-handlebars": "^0.5.2",
    "heroku-cli": "^6.14.20",
    "jsonwebtoken": "^7.4.3",
    "morgan": "^1.8.2",
    "node-gyp": "^3.6.2",
    "node-pre-gyp": "^0.6.36",
    "nyc": "^11.2.1",
    "pg": "^7.2.0",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.7.1",
    "sequelize-cli": "^2.8.0",
    "serve-favicon": "^2.4.3",
    "supertest": "^3.0.0",
    "toastr": "^2.1.2"
  },
  "devDependencies": {
    "colors": "^1.1.2",
    "coveralls": "^2.13.1",
     "eslint-config-airbnb-base": "^12.0.0",
    "eslint-plugin-import": "^2.7.0",
    "http-server": "^0.10.0",
    "mocha": "^3.5.0",
    "nodemon": "^1.11.0",
    "should": "^12.0.0",
    "source-map-support": "^0.4.17"
  },
  "scripts": {
    "babel": "babel --presets es2015 app.js -o public/bundle.js",
    "webpack": "webpack --d --watch",
    "serve": "babel app.js --out-file dist/compiled.js && node dist/compiled.js ",
    "heroku-postbuild": "npm run clean-start",
    "start": "babel-node app.js",
    "develop": "babel-node app.js",
    "build": "babel ./more-recipes -d ./more-recipes",
    "old-test": "mocha --compilers js:babel-core/register tests/test.js",
    "clean": "sequelize db:migrate:undo:all --env test && sequelize db:migrate --env test && sequelize db:seed:all --env test",
    "clean-start": "sequelize db:migrate:undo:all && sequelize db:migrate && sequelize db:seed:all",
    "test": "npm run clean && nyc mocha tests/**/*.js",
    "controllers-test" : "mocha --compilers js:babel-core/register tests/controllers.js",
     "models-test" : "mocha --compilers js:babel-core/register tests/models.js",
      "middlewares-test" : "mocha --compilers js:babel-core/register tests/middlewares.js"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 99,
    "statements": 99,
    "functions": 99,
    "branches": 99,
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcov",
      "text",
      "html",
      "text-summary"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Adekunle24/more-recipes.git"
  },
  "author": "adekunle",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Adekunle24/more-recipes/issues"
  },
  "homepage": "https://github.com/Adekunle24/more-recipes#readme"
}
